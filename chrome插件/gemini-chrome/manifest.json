{
  "manifest_version": 3,
  "name": "Omni-Adapter (Gemini)",
  "version": "1.0",
  "description": "Omni-Adapter: Google Business Gemini platform integration for multi-platform image generation",
  "permissions": [
    "webNavigation",
    "storage",
    "debugger",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://business.gemini.google/*",
    "https://*.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://business.gemini.google/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
